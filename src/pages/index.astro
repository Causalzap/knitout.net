---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import HomeLevelGrid from '../components/HomeLevelGrid.astro';
import Stats from '../components/Stats.astro';
import GameSteps from '../components/GameSteps.astro';
import Download from '../components/Download.astro';
import FAQ from '../components/FAQ.astro';
import CTA from '../components/CTA.astro';


// 这里定义首页专属的 SEO 信息
const seoTitle = "Knit Out - The Ultimate Yarn Puzzle Experience";
const seoDesc = "Stuck on Knit Out? Get expert guides and walkthroughs for every level. Play smarter and enjoy endless puzzle fun on iOS and Android.";
const canonical = "https://www.knitout.net/"; // 首页的标准 URL
---

<Layout title={seoTitle} description={seoDesc} canonical={canonical}>
    
    <Hero />
    
	<Stats />

	<HomeLevelGrid />

    <Features />

    <GameSteps />

    <FAQ />

    <Download />

    <CTA />

</Layout>