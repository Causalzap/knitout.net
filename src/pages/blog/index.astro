---
import Layout from '../../layouts/Layout.astro';
import { blogPosts, type BlogPost } from '../../data/blogPosts.ts';


// SEO配置
const seoTitle = 'Knit Out Strategy Blog – Gameplay Analysis & Puzzle Insights';
const seoDesc = 'In-depth gameplay analysis, level difficulty insights, and puzzle design breakdowns for Knit Out and similar yarn puzzle games.';
const canonical = 'https://www.knitout.net/blog';

// 格式化日期函数
const formatDate = (dateString: string): string => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

---
<Layout title={seoTitle} description={seoDesc} canonical={canonical}>
    <main class="blog-page">
  
      <!-- 博客头部 -->
      <header class="blog-header">
        <div class="container">
          <h1 class="blog-title">Knit Out Strategy & Gameplay Blog</h1>
          <p class="blog-subtitle">
            Gameplay insights, level difficulty analysis, and puzzle design breakdowns for Knit Out players.
          </p>
        </div>
      </header>
  
      <div class="container">
  
        <!-- ✅ Blog Helper（新增，极其重要） -->
        <section class="blog-helper">
          <p>
            Stuck on a level?
            Visit the
            <a href="/levels/" title="Knit Out Level Walkthroughs">
              Knit Out Walkthroughs
            </a>
            for step-by-step solutions and 3-star strategies.
          </p>
        </section>
  
        <!-- 内容介绍 -->
        <section class="content-intro">
          <h2>About This Blog</h2>
          <p>
            This blog focuses on Knit Out gameplay mechanics, level difficulty patterns,
            and puzzle design logic to help players understand why certain levels are challenging.
          </p>
          <p>
            Some articles also compare Knit Out with similar yarn and unscrew-style puzzle games,
            offering broader insights into puzzle design and progression systems.
          </p>
        </section>
  
        <!-- 文章列表 -->
        <div class="blog-grid">
          {blogPosts.map(post => (
            <a href={post.url} class="blog-card">
              <div class="card-link-overlay"></div>
              <div class="card-click-indicator"></div>
  
              <img src={post.image} alt={post.imageAlt || post.title} class="card-image" loading="lazy" />
              <div class="card-content">
                <span class="card-category">{post.category}</span>
                <h2 class="card-title">{post.title}</h2>
                <p class="card-excerpt">{post.excerpt}</p>
  
                <span class="article-use">
                  Helps players understand level difficulty & game mechanics
                </span>
  
                <div class="card-meta">
                  <span class="card-date">{formatDate(post.date)}</span>
                  <span class="read-more">Read more →</span>
                </div>
              </div>
            </a>
          ))}
        </div>
  
        <!-- FAQ（放在后面，作为补充） -->
        <section class="faq-section">
          <h2>Frequently Asked Questions</h2>
  
          <div class="faq-item">
            <div class="faq-question">Why does Knit Out become harder after level 20?</div>
            <div class="faq-answer">
              Difficulty increases due to multi-layer yarn locking, limited holding slots,
              and irreversible moves introduced after early levels.
            </div>
          </div>
  
          <div class="faq-item">
            <div class="faq-question">Is Knit Out pay-to-win?</div>
            <div class="faq-answer">
              No. All levels are solvable without spending money if you use the correct strategy.
            </div>
          </div>
  
          <div class="faq-item">
            <div class="faq-question">How does this blog help with walkthroughs?</div>
            <div class="faq-answer">
              Articles explain mechanics and difficulty patterns that make walkthroughs easier to follow.
            </div>
          </div>
        </section>
  
      </div>
    </main>
</Layout>
  

<style>
  :root {
    --knit-blue: #3498db;
    --knit-green: #2ecc71;
    --knit-purple: #9b59b6;
    --knit-dark: #2c3e50;
    --text-light: #7f8c8d;
    --background-light: #f9f9f9;
    --knit-orange: #e67e22;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  .blog-page {
    min-height: 100vh;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 30px 20px;
  }
  
  .blog-helper {
  background: #f8fafc;
  border-left: 4px solid var(--knit-blue);
  padding: 16px 20px;
  margin-bottom: 30px;
  border-radius: 8px;
  font-size: 1.05rem;
  color: var(--knit-dark);
}

.blog-helper a {
  color: var(--knit-blue);
  font-weight: 600;
  text-decoration: none;
}

.blog-helper a:hover {
  text-decoration: underline;
}


  /* 导航栏 */
  .nav-container {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    padding: 15px 40px;
    position: sticky;
    top: 0;
    z-index: 1000;
  }
  
  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .brand {
    display: flex;
    align-items: center;
    gap: 15px;
  }
  
  .logo {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--knit-blue) 0%, var(--knit-green) 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 22px;
  }
  
  .brand-name {
    font-size: 24px;
    font-weight: 600;
    color: var(--knit-dark);
  }

  .nav-menu {
    display: flex;
    gap: 35px;
  }
  
  .nav-link {
    position: relative;
    padding: 8px 0;
    font-size: 18px;
    font-weight: 500;
    color: var(--text-light);
    text-decoration: none;
    transition: color 0.3s;
  }
  
  .nav-link:hover {
    color: var(--knit-dark);
  }
  
  .nav-link.active {
    color: var(--knit-dark);
    font-weight: 600;
  }
  
  .nav-link.active:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, var(--knit-blue), var(--knit-green));
    border-radius: 3px;
  }
  
  /* 博客页面头部 */
  .blog-header {
    text-align: center;
    padding: 80px 0 50px;
    background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(46, 204, 113, 0.1) 100%);
    margin-bottom: 50px;
    border-radius: 0 0 20px 20px;
  }
  
  .blog-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--knit-dark);
    margin-bottom: 20px;
  }
  
  .blog-subtitle {
    font-size: 1.4rem;
    color: var(--text-light);
    max-width: 700px;
    margin: 0 auto;
  }
  
  /* 内容介绍部分 */
  .content-intro {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    margin-bottom: 40px;
  }
  
  .content-intro h2 {
    font-size: 1.8rem;
    color: var(--knit-dark);
    margin-bottom: 15px;
  }
  
  .content-intro p {
    font-size: 1.1rem;
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 15px;
  }
  
  .content-intro a {
    color: var(--knit-blue);
    text-decoration: none;
    font-weight: 600;
  }
  
  .content-intro a:hover {
    text-decoration: underline;
  }
  
  /* FAQ部分 */
  .faq-section {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    margin-bottom: 40px;
  }
  
  .faq-section h2 {
    font-size: 1.8rem;
    color: var(--knit-dark);
    margin-bottom: 20px;
  }
  
  .faq-item {
    border-top: 1px solid #eee;
    padding: 15px 0;
  }
  
  .faq-item:first-child {
    border-top: none;
  }
  
  .faq-question {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--knit-dark);
    margin-bottom: 8px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .faq-answer {
    font-size: 1rem;
    color: var(--text-light);
    line-height: 1.6;
    margin-top: 8px;
  }
  
  /* 博客文章网格 */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 40px;
    margin: 50px 0;
  }
  
  .blog-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
    cursor: pointer;
    position: relative;
    text-decoration: none;
    color: inherit;
  }
  
  .blog-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }
  
  /* 新增覆盖整个卡片的链接层 */
  .card-link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    cursor: pointer;
  }
  
  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .blog-card:hover .card-image {
    transform: scale(1.03);
  }
  
  .card-content {
    padding: 25px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 10;
  }
  
  .card-category {
    display: inline-block;
    background: linear-gradient(90deg, var(--knit-blue), var(--knit-green));
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 15px;
  }
  
  .card-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--knit-dark);
    margin-bottom: 15px;
    line-height: 1.3;
  }
  
  .card-excerpt {
    font-size: 1.1rem;
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 20px;
    flex-grow: 1;
  }
  
  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #eee;
  }
  
  .card-date {
    font-size: 0.9rem;
    color: var(--text-light);
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .read-more {
    color: var(--knit-blue);
    text-decoration: none;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: all 0.3s;
    position: relative;
    z-index: 20;
  }
  
  /* 新增点击反馈效果 */
  .card-click-indicator {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(52, 152, 219, 0.05);
    border-radius: 16px;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s;
    z-index: 1;
  }
  
  .blog-card:active .card-click-indicator {
    opacity: 1;
  }
  
  /* 页脚样式 */
  .knit-footer {
    background: linear-gradient(to right, #2c3e50, #1a2530);
    position: relative;
    overflow: hidden;
    padding: 4rem 0;
    color: white;
  }
  
  .knit-pattern {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(52, 152, 219, 0.1) 0%, transparent 20%),
      radial-gradient(circle at 90% 80%, rgba(46, 204, 113, 0.1) 0%, transparent 20%);
    z-index: 1;
  }

  .knit-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 10;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }
  
  .footer-brand {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .knit-logo {
    width: 4rem;
    height: 4rem;
    background: linear-gradient(135deg, var(--knit-blue), var(--knit-green));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 1.5rem;
    margin-right: 1rem;
  }
  
  .footer-logo-text {
    font-size: 1.5rem;
    font-weight: bold;
  }
  
  .footer-description {
    color: #d1d5db;
    max-width: 24rem;
    font-size: 1.125rem;
  }
  
  .footer-heading {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
  }
  
  .footer-links {
    list-style: none;
  }
  
  .footer-links li {
    margin-bottom: 1rem;
  }
  
  .footer-link {
    color: #d1d5db;
    font-size: 1.125rem;
    text-decoration: none;
    transition: color 0.3s;
  }
  
  .footer-link:hover {
    color: white;
  }
  
  .footer-bottom {
    border-top: 1px solid #4b5563;
    margin-top: 4rem;
    padding-top: 2rem;
    text-align: center;
    color: #9ca3af;
  }
  
  .footer-bottom p {
    font-size: 1.125rem;
  }
  
  .footer-disclaimer {
    margin-top: 0.5rem;
    color: #d1d5db;
    font-size: 1rem;
  }
  
  /* 响应式设计 */
  @media (max-width: 768px) {
    .nav-container {
      padding: 15px 20px;
    }
    
    .nav-menu {
      gap: 15px;
    }
    
    .nav-link {
      font-size: 16px;
    }
    
    .blog-header {
      padding: 60px 20px 40px;
    }
    
    .blog-title {
      font-size: 2.8rem;
    }
    
    .blog-subtitle {
      font-size: 1.2rem;
    }
    
    .content-intro,
    .faq-section {
      padding: 20px;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
  
  @media (min-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>