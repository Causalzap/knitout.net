                <div class="stat-icon-wrapper bg-purple-50">
                    <svg class="stat-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="5" width="18" height="14" rx="2"/>
                        <polygon points="9,9 15,12 9,15" fill="currentColor"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number" data-target="100">0</div>
                    <span class="stat-unit">%</span>
                    <div class="stat-label">Video Guides</div>
                    <p class="stat-detail">Step-by-step video tutorials for visual learners, with clear explanations</p>
                </div>
            </div>

            <!-- 全球玩家 -->
            <div class="stat-card">
                <div class="stat-icon-wrapper bg-pink-50">
                    <svg class="stat-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="8" r="5"/>
