---
// 1. 定义热门关卡数据 (方便维护)
const trendingGuides = [
  { 
    id: 5, 
    title: "Fluffy Pancakes", 
    desc: "Perfect flip timing guide", 
    color: "bg-knitBlue" 
  },
  { 
    id: 42, 
    title: "Tonkotsu Ramen", 
    desc: "Complex topping layout", 
    color: "bg-knitGreen" 
  },
  { 
    id: 78, 
    title: "Texas BBQ", 
    desc: "Searing & glazing secrets", 
    color: "bg-knitPurple" 
  },
  { 
    id: 95, 
    title: "Spicy Mooncakes", 
    desc: "Fusion dish 3-star strategy", 
    color: "bg-knitPink" 
  },
];
---

<header class="knit-hero">
    <div class="knit-container">
        <div class="knit-layout">
            <!-- 左侧内容区域 -->
            <div class="knit-content">
                <h1 class="knit-title">Master Every <br/><span class="title-gradient">Cookingdom Recipe</span></h1>
                <p class="knit-description">
                    Discover 3-star plating strategies, perfect timing tips, and cozy decoration ideas for all 100+ global dishes. 
                </p>
                
                <!-- 搜索区域 -->
                <div class="knit-search-section">
                    <div class="search-container">
                        <div class="search-input-group">
                            <div class="search-input-wrapper">
                                <input
                                    id="levelInput"
                                    type="number"
                                    min="1"
                                    max="1000"
                                    placeholder="Enter Level (e.g. 42)"
                                    class="level-input"
                                />
                                <i class="search-icon fas fa-search"></i>
                            </div>
                            <button id="findSolutionBtn" class="search-button">
                                Find Recipe
                            </button>
                        </div>
                        <a href="/cookingdom/levels" class="explore-button">
                            Explore All Dishes
                        </a>
                    </div>
                </div>
                
                <!-- 热门指南网格 -->
                <div class="popular-guides">
                    <h2 class="guides-title">Trending Guides</h2>
                    <div class="guides-grid">
                        {trendingGuides.map((guide) => (
                            <a href={`/cookingdom/${guide.id}`} class="guide-card">
                                <div class={`guide-number ${guide.color}`}>{guide.id}</div>
                                <div class="guide-content">
                                    <h3 class="guide-title">{guide.title}</h3>
                                    <p class="guide-desc">{guide.desc}</p>
                                </div>
                            </a>
                        ))}
                    </div>
                </div>
            </div>

            <!-- 右侧图片区域 -->
            <div class="knit-visual">
                <div class="game-display">
                    <div class="image-container">
                        <img 
                            src="/images/cookingdom/cookingdom-gameplay.webp" 
                            alt="Cookingdom Gameplay" 
                            class="game-image"
                            loading="eager"
                        />
                        <div class="game-badge">
                            <span class="badge-dot"></span>
                            <span class="badge-text">New Levels Added!</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const btn = document.getElementById('findSolutionBtn');
        const input = document.getElementById('levelInput') as HTMLInputElement; 

        function handleSearch() {
            if (btn && input) {
                const level = input.value;
                if (level && parseInt(level) > 0) {
                    // 跳转到新路由
                    window.location.href = `/cookingdom/${level}`;
                } else {
                    // 错误提示
                    input.classList.add('error');
                    setTimeout(() => {
                        input.classList.remove('error');
                    }, 500);
                }
            }
        }

        if (btn && input) {
            // 点击事件
            btn.addEventListener('click', handleSearch);

            // 回车事件
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
        }
    });
</script>

<style>
    /* CSS变量定义，便于维护 */
    :root {
        --knit-blue: #3498db;
        --knit-green: #2ecc71;
        --knit-purple: #9b59b6;
        --knit-pink: #e84393;
        --knit-dark: #2c3e50;
        --knit-gray: #6b7280;
        --knit-light-bg: rgba(52, 152, 219, 0.1);
        --cooking-orange: #f97316;
        --cooking-red: #dc2626;
        --cooking-amber: #d97706;
        --cooking-rose: #e11d48;
        --shadow-light: 0 4px 6px rgba(0, 0, 0, 0.07);
        --shadow-medium: 0 10px 25px rgba(0, 0, 0, 0.1);
        --shadow-heavy: 0 20px 40px rgba(0, 0, 0, 0.15);
        --radius-small: 8px;
        --radius-medium: 16px;
        --radius-large: 24px;
        --transition: all 0.3s ease;
    }

    /* 主容器样式 */
    .knit-hero {
        padding: 80px 0;
        background: linear-gradient(135deg, rgba(249, 115, 22, 0.1) 0%, rgba(220, 38, 38, 0.1) 100%);
        border-radius: 0 0 30px 30px;
        margin-bottom: 40px;
    }

    .knit-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* 布局系统 - 使用弹性布局实现响应式 */
    .knit-layout {
        display: flex;
        flex-direction: column;
        gap: 50px;
        align-items: center;
    }

    @media (min-width: 1024px) {
        .knit-layout {
            flex-direction: row;
            align-items: flex-start;
            gap: 60px;
        }
        
        .knit-content {
            flex: 1;
        }
        
        .knit-visual {
            flex: 0 0 45%;
            position: sticky;
            top: 20px;
        }
    }

    /* 内容区域样式 */
    .knit-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        color: var(--knit-dark);
        line-height: 1.2;
    }
    
    .title-gradient {
        background: linear-gradient(90deg, var(--cooking-orange), var(--cooking-red));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }

    .knit-description {
        font-size: 1.25rem;
        color: var(--knit-gray);
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .knit-title {
            font-size: 3rem;
        }
    }

    /* 搜索区域样式 */
    .knit-search-section {
        margin-bottom: 3rem;
    }

    .search-container {
        width: 100%;
        max-width: 700px;
    }

    .search-input-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    @media (min-width: 640px) {
        .search-input-group {
            flex-direction: row;
            align-items: center;
        }
        
        .search-input-wrapper {
            flex: 3;
        }
        
        .search-button {
            flex: 1;
            min-width: 140px;
        }
    }

    .search-input-wrapper {
        position: relative;
        width: 100%;
    }

    .level-input {
        width: 100%;
        padding: 1rem 3rem 1rem 1.5rem;
        border: 1px solid #e5e7eb;
        border-radius: 50px;
        font-size: 1.125rem;
        background: white;
        box-shadow: var(--shadow-light);
        transition: var(--transition);
        box-sizing: border-box;
    }

    .level-input:focus {
        outline: none;
        border-color: var(--cooking-orange);
        box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.1);
    }

    .level-input.error {
        border-color: #ef4444;
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
    }

    .search-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--knit-gray);
        font-size: 1.25rem;
        pointer-events: none;
    }

    /* Font Awesome 图标 */
    .fa-search:before {
        content: "\f002";
        font-family: "Font Awesome 6 Free";
        font-weight: 900;
    }

    .search-button {
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, var(--cooking-orange), var(--cooking-red));
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-medium);
        white-space: nowrap;
        width: 100%;
    }

    .search-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(249, 115, 22, 0.3);
    }

    @media (max-width: 639px) {
        .search-button {
            padding: 0.875rem 1.25rem;
            font-size: 1rem;
        }
        
        .level-input {
            padding: 0.875rem 2.5rem 0.875rem 1.25rem;
            font-size: 1rem;
        }
    }

    .explore-button {
        display: block;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: var(--transition);
        background: linear-gradient(to right, var(--cooking-amber), var(--cooking-rose));
        color: white;
        box-shadow: var(--shadow-medium);
        width: 100%;
    }

    .explore-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(217, 119, 6, 0.3);
    }

    @media (min-width: 640px) {
        .explore-button {
            width: auto;
            display: inline-block;
        }
    }

    /* 热门指南样式 */
    .popular-guides {
        margin-top: 3rem;
    }

    .guides-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--knit-dark);
        border-left: 4px solid var(--cooking-orange);
        padding-left: 1rem;
    }

    .guides-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }

    @media (min-width: 640px) {
        .guides-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .guide-card {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        background: white;
        border-radius: var(--radius-medium);
        box-shadow: var(--shadow-light);
        transition: var(--transition);
        text-decoration: none;
        gap: 1rem;
    }

    .guide-card:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-medium);
    }

    .guide-number {
        width: 4rem;
        height: 4rem;
        border-radius: var(--radius-small);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.5rem;
        box-shadow: var(--shadow-light);
        flex-shrink: 0;
    }

    .guide-content {
        flex: 1;
    }

    .guide-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--knit-dark);
        margin-bottom: 0.25rem;
    }

    .guide-title:hover {
        color: var(--cooking-orange);
    }

    .guide-desc {
        color: var(--knit-gray);
        font-size: 0.875rem;
    }

    /* 图片区域样式 */
    .game-display {
        width: 100%;
        position: relative;
        overflow: hidden;
        border-radius: var(--radius-large);
        box-shadow: var(--shadow-heavy);
        transition: var(--transition);
    }

    .game-display:hover {
        transform: translateY(-3px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }

    .image-container {
        width: 100%;
        border-radius: var(--radius-large);
        overflow: hidden;
        position: relative;
    }

    .game-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.5s ease;
    }

    .game-display:hover .game-image {
        transform: scale(1.02);
    }

    .game-badge {
        position: absolute;
        bottom: 1.5rem;
        left: 1.5rem;
        background: white;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-small);
        box-shadow: var(--shadow-light);
        border: 1px solid rgba(249, 115, 22, 0.1);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .badge-dot {
        position: relative;
        display: inline-block;
        width: 0.75rem;
        height: 0.75rem;
    }

    .badge-dot:before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: #10b981;
        border-radius: 50%;
        opacity: 0.75;
        animation: ping 1.5s cubic-bezier(0, 0, 0.2, 1) infinite;
    }

    .badge-dot:after {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: #10b981;
        border-radius: 50%;
    }

    .badge-text {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--knit-dark);
    }

    @keyframes ping {
        75%, 100% {
            transform: scale(1.5);
            opacity: 0;
        }
    }

    /* 颜色工具类 - 使用烹饪主题色 */
    .bg-knitBlue { background-color: var(--cooking-orange); }
    .bg-knitGreen { background-color: var(--cooking-red); }
    .bg-knitPurple { background-color: var(--cooking-amber); }
    .bg-knitPink { background-color: var(--cooking-rose); }
</style>