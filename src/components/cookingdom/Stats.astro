        </div>
    </div>
</section>

<script>
    // 动画脚本保持不变，它会自动读取新的 data-target
    document.addEventListener('DOMContentLoaded', () => {
        const statNumbers = document.querySelectorAll<HTMLElement>('.stat-number');
        
        const animateValue = (
            element: HTMLElement, 
            start: number, 
            end: number, 
            duration: number
        ): void => {
            let startTimestamp: number | null = null;
            
            const step = (timestamp: number): void => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                element.textContent = value.toLocaleString();
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            
            window.requestAnimationFrame(step);
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const element = entry.target as HTMLElement;
                    const targetValue = element.getAttribute('data-target');
                    
                    if (targetValue) {
                        const target = parseInt(targetValue, 10);
                        const duration = 2000; 
                        
                        if (element.nextElementSibling?.classList.contains('stat-unit') && element.nextElementSibling.textContent === '%') {
                            animateValue(element, 0, target, duration);
                        } else if (target < 100) {
                            animateValue(element, 0, target, duration);
                        } else {
                            animateValue(element, 0, target, duration);
                        }
                    }
                    observer.unobserve(element);
                }
            });
        }, {
            threshold: 0.5,
            rootMargin: '0px 0px -50px 0px'
        });

        statNumbers.forEach(number => {
            observer.observe(number);
        });
    });
</script>

<style>
    /* 已更新为 Cookingdom 橙色/红色主题变量 */
    :root {
        --stats-bg: #fff9f5; /* 暖色背景 */
        --stats-border: #fed7aa; /* 橙色边框 */
        --text-dark: #2c3e50;
        --text-gray: #6b7280;
        --text-light: #9ca3af;
        
        /* 烹饪主题色 */
        --cooking-orange: #f97316;
        --cooking-red: #dc2626;
        --cooking-amber: #d97706;
        --cooking-rose: #e11d48;
        
        /* 背景色 tint */
        --orange-50: #fff7ed;
        --red-50: #fef2f2;
        --amber-50: #fffbeb;
        --rose-50: #fff1f2;
        
        --shadow-sm: 0 1px 3px rgba(249, 115, 22, 0.1);
        --shadow-md: 0 4px 6px -1px rgba(249, 115, 22, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(249, 115, 22, 0.15);
        --radius-md: 12px;
        --radius-lg: 16px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* 整体区域 */
    .stats-section {
        background: var(--stats-bg);
        border-top: 1px solid var(--stats-border);
        border-bottom: 1px solid var(--stats-border);
        padding: 4rem 0;
        position: relative;
    }

    .stats-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* 标题区域 */
    .stats-header {
        text-align: center;
        margin-bottom: 3rem;
        max-width: 48rem;
        margin-left: auto;
        margin-right: auto;
    }

    .stats-title {
        font-size: 2.5rem;
        font-weight: 800; /* 加粗 */
        color: var(--text-dark);
        margin-bottom: 1rem;
        letter-spacing: -0.025em;
    }

    /* 标题中的 Cookingdom 高亮效果（可选）*/
    .stats-title {
        background: linear-gradient(90deg, var(--text-dark), var(--cooking-orange));
        -webkit-background-clip: text;
        background-clip: text;
        /* color: transparent; 如果想要完全渐变字，取消注释这行 */
    }

    .stats-description {
        font-size: 1.125rem;
        color: var(--text-gray);
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .stats-title {
            font-size: 3rem;
        }
        .stats-description {
            font-size: 1.25rem;
        }
    }

    /* 统计数据网格 */
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .stats-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* 统计卡片 */
    .stat-card {
        background: white;
        border-radius: var(--radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-md);
        border: 1px solid rgba(249, 115, 22, 0.1); /* 橙色微边框 */
        transition: var(--transition);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .stat-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: rgba(249, 115, 22, 0.3);
    }

    /* 图标区域 */
    .stat-icon-wrapper {
        width: 5rem;
        height: 5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

    .stat-icon {
        width: 2.5rem;
        height: 2.5rem;
    }

    /* 颜色类适配烹饪主题 */
    .bg-orange-50 { background-color: var(--orange-50); }
    .bg-red-50 { background-color: var(--red-50); }
    .bg-amber-50 { background-color: var(--amber-50); }
    .bg-rose-50 { background-color: var(--rose-50); }

    /* 图标颜色 */
    .bg-orange-50 .stat-icon { color: var(--cooking-orange); }
    .bg-red-50 .stat-icon { color: var(--cooking-red); }
    .bg-amber-50 .stat-icon { color: var(--cooking-amber); }
    .bg-rose-50 .stat-icon { color: var(--cooking-rose); }

    /* 内容区域 */
    .stat-content {
        flex: 1;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 0.25rem;
        display: inline-block;
        /* 数字渐变色 */
        background: linear-gradient(135deg, var(--cooking-orange), var(--cooking-red));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .stat-unit {
        font-size: 2rem;
        font-weight: 700;
        color: var(--cooking-red);
        margin-left: 0.125rem;
    }

    .stat-label {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-detail {
        color: var(--text-gray);
        line-height: 1.5;
        font-size: 0.875rem;
    }

    /* 功能特性 */
    .stats-features {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        border-top: 1px solid rgba(249, 115, 22, 0.1);
        padding-top: 3rem;
    }

    @media (min-width: 768px) {
        .stats-features {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .feature-item {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
    }

    .feature-icon {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--cooking-orange); /* 绿色改为橙色 */
        flex-shrink: 0;
        margin-top: 0.25rem;
    }

    .feature-title {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.25rem;
    }

    .feature-description {
        color: var(--text-gray);
        line-height: 1.5;
        font-size: 0.875rem;
    }

    /* 悬停效果 */
    .stat-card:hover .stat-icon-wrapper {
        transform: scale(1.1);
    }

    .stat-card:hover .stat-icon {
        animation: iconBounce 0.6s ease;
    }

    @keyframes iconBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
    }

    /* 响应式调整 */
    @media (max-width: 767px) {
        .stats-section {
            padding: 3rem 0;
        }
        .stats-header {
            margin-bottom: 2rem;
        }
        .stats-title {
            font-size: 2rem;
        }
        .stat-card {
            padding: 1.5rem;
        }
        .stat-icon-wrapper {
            width: 4rem;
            height: 4rem;
            margin-bottom: 1.25rem;
        }
        .stat-icon {
            width: 2rem;
            height: 2rem;
        }
        .stat-number {
            font-size: 2.5rem;
        }
        .stat-unit {
            font-size: 1.5rem;
        }
        .stats-features {
            gap: 1.5rem;
            padding-top: 2rem;
        }
    }

    @media (min-width: 768px) and (max-width: 1023px) {
        .stats-grid {
            gap: 1.5rem;
        }
        .stat-card {
            padding: 1.75rem;
        }
        .stat-number {
            font-size: 2.75rem;
        }
    }

    /* 动画 */
    .stat-card {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }
    .stat-card:nth-child(1) { animation-delay: 0.1s; }
    .stat-card:nth-child(2) { animation-delay: 0.2s; }
    .stat-card:nth-child(3) { animation-delay: 0.3s; }
    .stat-card:nth-child(4) { animation-delay: 0.4s; }

    .feature-item {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }
    .feature-item:nth-child(1) { animation-delay: 0.5s; }
    .feature-item:nth-child(2) { animation-delay: 0.6s; }
    .feature-item:nth-child(3) { animation-delay: 0.7s; }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>