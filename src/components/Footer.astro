---
// 获取当前年份，明年自动变 2026
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="footer-container">
        <!-- 顶部网格布局 - 调整为横向排列 -->
        <div class="footer-grid">
            <!-- 品牌信息 -->
            <div class="footer-brand">
                <div class="brand-container">
                    <div class="brand-logo">
                        <div class="logo-circle">KO</div>
                        <span class="brand-name">Knit Out Solutions</span>
                    </div>
                    <p class="brand-description">
                        Your ultimate resource for Knit Out game guides, walkthroughs, and strategies.
                        Find solutions for every level and become a master knitter!
                    </p>
                </div>
            </div>

            <!-- 链接区域 - 保持横向排列 -->
            <div class="footer-links">
                <!-- 关于链接 -->
                <div class="footer-section">
                    <h3 class="section-title">About</h3>
                    <ul class="section-links">
                        <li><a href="/terms" class="footer-link">Terms of Service</a></li>
                        <li><a href="/privacy-policy" class="footer-link">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- 更多指南 -->
                <div class="footer-section">
                    <h3 class="section-title">More Guides</h3>
                    <ul class="section-links">
                        <li>
                            <a href="https://www.drop-the-cat.com/" target="_blank" rel="noopener noreferrer" 
                               class="footer-link external-link">
                                Drop the Cat – Guide
                            </a>
                        </li>
                        <li>
                            <a href="https://www.holepeoplelevel.com" target="_blank" rel="noopener noreferrer" 
                               class="footer-link external-link">
                                Hole People Level – Walkthroughs
                            </a>
                        </li>
                        <li>
                            <a href="https://causalzap.com/en" target="_blank" rel="noopener noreferrer" 
                               class="footer-link external-link">
                                Causalzap – Casual Games Online
                            </a>
                        </li>
                        <li>
                            <a href="https://www.braintestguide.com/" target="_blank" rel="noopener noreferrer" 
                               class="footer-link external-link">
                                Brain Test Guide – Answers
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- 联系我们 -->
                <div class="footer-section">
                    <h3 class="section-title">Contact Us</h3>
                    <ul class="section-links">
                        <li>
                            <a href="mailto:support@causalzap.com" class="footer-link email-link">
                                <svg class="email-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                    <polyline points="22,6 12,13 2,6"/>
                                </svg>
                                support@causalzap.com
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- 底部版权信息 -->
        <div class="footer-bottom">
            <p class="copyright">© {currentYear} Knit Out Solutions. All rights reserved.</p>
            <p class="disclaimer">This is an unofficial fan site. Knit Out is a registered trademark of its respective owners.</p>
        </div>
    </div>
</footer>

<style>
    /* CSS变量定义 - 使用图1的深蓝色渐变 */
    :root {
        --footer-bg: linear-gradient(135deg, #2c3e50, #1a2530);
        --footer-bg-light: rgba(52, 152, 219, 0.1);
        --footer-border: #374151;
        --footer-text: #d1d5db;
        --footer-text-light: #9ca3af;
        --footer-link: #e5e7eb;
        --accent-green: #2ecc71;
        --accent-blue: #3498db;
        --accent-gradient: linear-gradient(135deg, #3498db, #2ecc71);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 8px 20px rgba(52, 152, 219, 0.3);
        --radius-md: 8px;
        --radius-lg: 12px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* 页脚整体样式 */
    .site-footer {
        background: var(--footer-bg);
        position: relative;
        overflow: hidden;
        padding: 4rem 0 2rem;
        color: var(--footer-text);
    }

    /* 背景装饰 - 图1的径向渐变图案 */
    .site-footer::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-image: 
            radial-gradient(circle at 10% 20%, var(--footer-bg-light) 0%, transparent 20%),
            radial-gradient(circle at 90% 80%, rgba(46, 204, 113, 0.1) 0%, transparent 20%);
        z-index: 0;
        pointer-events: none;
    }

    /* 容器 */
    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
        position: relative;
        z-index: 1;
    }

    /* 网格布局 - 始终横向排列，品牌区域在左，链接区域在右 */
    .footer-grid {
        display: flex;
        flex-direction: column;
        gap: 3rem;
        margin-bottom: 4rem;
    }

    @media (min-width: 768px) {
        .footer-grid {
            flex-direction: row;
            align-items: flex-start;
        }
        
        .footer-brand {
            flex: 1;
        }
        
        .footer-links {
            flex: 2;
        }
    }

    /* 品牌区域 */
    .footer-brand {
        display: flex;
        flex-direction: column;
    }

    .brand-container {
        max-width: 400px;
    }

    .brand-logo {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .logo-circle {
        width: 4rem;
        height: 4rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.5rem;
        color: white;
        background: var(--accent-gradient);
        box-shadow: var(--shadow-lg);
    }

    .brand-name {
        font-size: 1.75rem;
        font-weight: 700;
        color: white;
    }

    .brand-description {
        color: var(--footer-text-light);
        line-height: 1.6;
        font-size: 1rem;
    }

    /* 链接区域 - 始终横向排列，不使用网格改为flex布局 */
    .footer-links {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    @media (min-width: 640px) {
        .footer-links {
            flex-direction: row;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        
        .footer-section {
            flex: 1;
            min-width: 150px;
        }
    }

    /* 分区样式 */
    .footer-section {
        display: flex;
        flex-direction: column;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: white;
        margin-bottom: 1.5rem;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -0.5rem;
        left: 0;
        width: 2.5rem;
        height: 3px;
        background: var(--accent-gradient);
        border-radius: 2px;
    }

    .section-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    /* 链接样式 */
    .footer-link {
        color: var(--footer-link);
        text-decoration: none;
        font-size: 1rem;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-link:hover {
        color: white;
        transform: translateX(0.25rem);
    }

    /* 外部链接图标 - 图1样式 */
    .external-link {
        position: relative;
        padding-right: 1.5rem;
    }

    .external-link::after {
        content: '↗';
        position: absolute;
        right: 0;
        font-size: 0.875rem;
        font-weight: 600;
    }

    /* 邮箱图标 */
    .email-icon {
        width: 1.25rem;
        height: 1.25rem;
        flex-shrink: 0;
    }

    /* 底部版权区域 */
    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
        text-align: center;
    }

    .copyright {
        color: var(--footer-text);
        font-size: 1rem;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .disclaimer {
        color: var(--footer-text-light);
        font-size: 0.875rem;
        line-height: 1.5;
        max-width: 40rem;
        margin: 0 auto;
    }

    /* 响应式调整 - 确保链接始终横向排列 */
    @media (max-width: 639px) {
        .footer-links {
            display: flex;
            flex-direction: row;
            overflow-x: auto;
            gap: 2rem;
            padding-bottom: 1rem;
            -webkit-overflow-scrolling: touch;
        }
        
        .footer-section {
            flex: 0 0 auto;
            min-width: 200px;
        }
        
        .site-footer {
            padding: 3rem 0 1.5rem;
        }
        
        .footer-grid {
            gap: 2.5rem;
            margin-bottom: 3rem;
        }
        
        .brand-logo {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .logo-circle {
            width: 3.5rem;
            height: 3.5rem;
            font-size: 1.25rem;
        }
        
        .brand-name {
            font-size: 1.5rem;
        }
        
        .section-title {
            font-size: 1.125rem;
        }
        
        .footer-link {
            font-size: 0.9375rem;
        }
    }

    @media (min-width: 640px) and (max-width: 1023px) {
        .footer-grid {
            gap: 2.5rem;
        }
        
        .footer-links {
            gap: 2rem;
        }
        
        .brand-description {
            font-size: 0.9375rem;
        }
    }

    /* 悬停效果 */
    .footer-link {
        position: relative;
    }

    .footer-link::before {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent-gradient);
        transition: width 0.3s ease;
    }

    .footer-link:hover::before {
        width: 100%;
    }
</style>