    .level-item:nth-child(10) { animation-delay: 0.5s; }
    .level-item:nth-child(11) { animation-delay: 0.55s; }
    .level-item:nth-child(12) { animation-delay: 0.6s; }
    .level-item:nth-child(13) { animation-delay: 0.65s; }
    .level-item:nth-child(14) { animation-delay: 0.7s; }
    .level-item:nth-child(15) { animation-delay: 0.75s; }
    .level-item:nth-child(16) { animation-delay: 0.8s; }
    .level-item:nth-child(17) { animation-delay: 0.85s; }
    .level-item:nth-child(18) { animation-delay: 0.9s; }
    .level-item:nth-child(19) { animation-delay: 0.95s; }
