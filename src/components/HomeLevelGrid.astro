        --text-dark: #1f2937;
        --text-light: #9ca3af;
        --border-color: #e5e7eb;
        --accent-blue: #3b82f6;
        --accent-gradient: linear-gradient(135deg, #3b82f6, #10b981);
        --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.1);
