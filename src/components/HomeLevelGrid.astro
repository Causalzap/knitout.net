---
// 1. 导入你的数据文件
// 假设你的文件在 src/data/test.json
import levelData from '../data/test.json';

// 2. 处理数据
// Object.entries 把 {"1": "vid", "2": "vid"} 变成数组
// .slice(0, 48) 限制只显示前 48 关 (数字不要太多，太长了不好看)
const levels = Object.entries(levelData)
    .map(([id, videoId]) => ({ 
        id: parseInt(id), // 把 "1" 变成数字 1
        videoId: videoId 
    }))
    .sort((a, b) => a.id - b.id) // 确保按 1, 2, 3... 顺序排列
    .slice(1300, 1347); // 只取前 48 关展示在首页
---

<section class="levels-section">
    <div class="levels-container">
        <div class="section-header">
            <h2 class="section-title">Knit Out Walkthrough & Answers</h2>
            <p class="section-description">Select a level below to watch the full 3-star solution video.</p>
        </div>

        <div class="levels-grid">
            {levels.map((lvl) => (
                <a href={`/level/${lvl.id}`} class="level-item" title={`Walkthrough for Level ${lvl.id} Solution`}>
                    <div class="level-number">{lvl.id}</div>
                </a>
            ))}
        </div>
        
        <div class="view-all-container">
            <a href="/levels" class="view-all-button">
                View All 1000+ Levels
            </a>
        </div>
    </div>
</section>

