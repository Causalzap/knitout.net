---
// 这里不需要服务端 JS
---
<header class="knit-hero">
    <div class="knit-container">
        <div class="knit-layout">
            <!-- 左侧内容区域 -->
            <div class="knit-content">
                <h1 class="knit-title">Master Every Knit Out Level</h1>
                <p class="knit-description">
                    Discover step-by-step solutions, expert tips, and winning strategies for all 1000+ levels. Jump directly to any level solution with our intuitive search.
                </p>
                
                <!-- 搜索区域 -->
                <div class="knit-search-section">
                    <div class="search-container">
                        <div class="search-input-group">
                            <div class="search-input-wrapper">
                                <input
                                    id="levelInput"
                                    type="number"
                                    min="1"
                                    max="1000"
                                    placeholder="Enter level number (1-1000)"
                                    class="level-input"
                                />
                                <i class="search-icon fas fa-search"></i>
                            </div>
                            <button id="findSolutionBtn" class="search-button">
                                Find Solution
                            </button>
                        </div>
                        <a href="/levels" class="explore-button">
                            Explore All Levels
                        </a>
                    </div>
                </div>
                
                <!-- 热门指南网格 -->
                <div class="popular-guides">
                    <h2 class="guides-title">Popular Level Guides</h2>
                    <div class="guides-grid">
                        <a href="/level/94" class="guide-card">
                            <div class="guide-number bg-knitBlue">94</div>
                            <div class="guide-content">
                                <h3 class="guide-title">Level 94 Strategy</h3>
                                <p class="guide-desc">Advanced threading techniques</p>
                            </div>
                        </a>

                        <a href="/level/162" class="guide-card">
                            <div class="guide-number bg-knitGreen">162</div>
                            <div class="guide-content">
                                <h3 class="guide-title">Level 162 Walkthrough</h3>
                                <p class="guide-desc">Color matching patterns</p>
                            </div>
                        </a>

                        <a href="/level/201" class="guide-card">
                            <div class="guide-number bg-knitPurple">201</div>
                            <div class="guide-content">
                                <h3 class="guide-title">Level 201 Solution</h3>
                                <p class="guide-desc">Multi-thread weaving</p>
                            </div>
                        </a>

                        <a href="/level/205" class="guide-card">
                            <div class="guide-number bg-knitPink">205</div>
                            <div class="guide-content">
                                <h3 class="guide-title">Level 205 Guide</h3>
                                <p class="guide-desc">Complex pattern sorting</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- 右侧图片区域 -->
            <div class="knit-visual">
                <div class="game-display">
                    <div class="image-container">
                        <img 
                            src="/images/knitout/knit-out-game-level-screenshot.png" 
                            alt="Knit Out Game Screenshot" 
                            class="game-image"
                            loading="lazy"
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    const btn = document.getElementById('findSolutionBtn');
    const input = document.getElementById('levelInput') as HTMLInputElement; 

    if (btn && input) {
        // 点击事件
        btn.addEventListener('click', () => {
            const level = parseInt(input.value);
            if (isNaN(level) || level < 1 || level > 1000) {
                alert('Please enter a valid level number between 1 and 1000');
                input.focus();
                return;
            }
            // 跳转到新路由
            window.location.href = `/level/${level}`;
        });

        // 回车事件
        input.addEventListener('keyup', (e) => {
            if (e.key === 'Enter') {
                btn.click();
            }
        });
    }
</script>

<style>
    /* CSS变量定义，便于维护 */
    :root {
        --knit-blue: #3498db;
        --knit-green: #2ecc71;
        --knit-purple: #9b59b6;
        --knit-pink: #e84393;
        --knit-dark: #2c3e50;
        --knit-gray: #6b7280;
        --knit-light-bg: rgba(52, 152, 219, 0.1);
        --shadow-light: 0 4px 6px rgba(0, 0, 0, 0.07);
        --shadow-medium: 0 10px 25px rgba(0, 0, 0, 0.1);
        --shadow-heavy: 0 20px 40px rgba(0, 0, 0, 0.15);
        --radius-small: 8px;
        --radius-medium: 16px;
        --radius-large: 24px;
        --transition: all 0.3s ease;
    }

    /* 主容器样式 */
    .knit-hero {
        padding: 80px 0;
        background: linear-gradient(135deg, var(--knit-light-bg) 0%, rgba(46, 204, 113, 0.1) 100%);
        border-radius: 0 0 30px 30px;
        margin-bottom: 40px;
    }

    .knit-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    /* 布局系统 - 使用弹性布局实现响应式 */
    .knit-layout {
        display: flex;
        flex-direction: column;
        gap: 50px;
        align-items: center;
    }

    @media (min-width: 1024px) {
        .knit-layout {
            flex-direction: row;
            align-items: flex-start;
            gap: 60px;
        }
        
        .knit-content {
            flex: 1;
        }
        
        .knit-visual {
            flex: 0 0 45%;
            position: sticky;
            top: 20px;
        }
    }

    /* 内容区域样式 */
    .knit-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(90deg, var(--knit-blue), var(--knit-green));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        line-height: 1.2;
    }

    .knit-description {
        font-size: 1.25rem;
        color: var(--knit-gray);
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .knit-title {
            font-size: 3rem;
        }
    }

    /* 搜索区域样式 - 修复重叠问题 */
    .knit-search-section {
        margin-bottom: 3rem;
    }

    .search-container {
        width: 100%;
        max-width: 700px; /* 限制搜索区域最大宽度 */
    }

    .search-input-group {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    @media (min-width: 640px) {
        .search-input-group {
            flex-direction: row;
            align-items: center;
        }
        
        /* 在桌面端设置搜索框和按钮的宽度比例 */
        .search-input-wrapper {
            flex: 3; /* 搜索框占3份 */
        }
        
        .search-button {
            flex: 1; /* 按钮占1份 */
            min-width: 140px; /* 按钮最小宽度 */
        }
    }

    .search-input-wrapper {
        position: relative;
        width: 100%;
    }

    .level-input {
        width: 100%;
        padding: 1rem 3rem 1rem 1.5rem; /* 右侧留更多空间给搜索图标 */
        border: 1px solid #e5e7eb;
        border-radius: 50px;
        font-size: 1.125rem;
        background: white;
        box-shadow: var(--shadow-light);
        transition: var(--transition);
        box-sizing: border-box; /* 确保padding不影响宽度计算 */
    }

    .level-input:focus {
        outline: none;
        border-color: var(--knit-blue);
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
    }

    .search-icon {
        position: absolute;
        right: 1.5rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--knit-gray);
        font-size: 1.25rem;
        pointer-events: none; /* 防止图标干扰点击输入框 */
    }

    .search-button {
        padding: 1rem 1.5rem; /* 调整内边距 */
        background: linear-gradient(135deg, var(--knit-blue), var(--knit-green));
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-medium);
        white-space: nowrap;
        width: 100%; /* 移动端占满宽度 */
    }

    .search-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(52, 152, 219, 0.3);
    }

    /* 在小屏幕上进一步调整按钮大小 */
    @media (max-width: 639px) {
        .search-button {
            padding: 0.875rem 1.25rem;
            font-size: 1rem;
        }
        
        .level-input {
            padding: 0.875rem 2.5rem 0.875rem 1.25rem;
            font-size: 1rem;
        }
    }

    .explore-button {
        display: block;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: var(--transition);
        background: linear-gradient(to right, var(--knit-purple), #8e44ad);
        color: white;
        box-shadow: var(--shadow-medium);
        width: 100%; /* 移动端占满宽度 */
    }

    .explore-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(155, 89, 182, 0.3);
    }

    @media (min-width: 640px) {
        .explore-button {
            width: auto; /* 桌面端自动宽度 */
            display: inline-block;
        }
    }

    /* 热门指南样式 */
    .popular-guides {
        margin-top: 3rem;
    }

    .guides-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--knit-dark);
        border-left: 4px solid var(--knit-blue);
        padding-left: 1rem;
    }

    .guides-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }

    @media (min-width: 640px) {
        .guides-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .guide-card {
        display: flex;
        align-items: center;
        padding: 1.25rem;
        background: white;
        border-radius: var(--radius-medium);
        box-shadow: var(--shadow-light);
        transition: var(--transition);
        text-decoration: none;
        gap: 1rem;
    }

    .guide-card:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-medium);
    }

    .guide-number {
        width: 4rem;
        height: 4rem;
        border-radius: var(--radius-small);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1.5rem;
        box-shadow: var(--shadow-light);
        flex-shrink: 0;
    }

    .guide-content {
        flex: 1;
    }

    .guide-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--knit-dark);
        margin-bottom: 0.25rem;
    }

    .guide-desc {
        color: var(--knit-gray);
        font-size: 0.875rem;
    }

    /* 图片区域样式 */
    .game-display {
        width: 100%;
        position: relative;
        overflow: hidden;
        border-radius: var(--radius-large);
        box-shadow: var(--shadow-heavy);
        transition: var(--transition);
    }

    .game-display:hover {
        transform: translateY(-3px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
    }

    .image-container {
        width: 100%;
        border-radius: var(--radius-large);
        overflow: hidden;
    }

    .game-image {
        width: 100%;
        height: auto;
        display: block;
        transition: transform 0.5s ease;
    }

    .game-display:hover .game-image {
        transform: scale(1.02);
    }

    /* 颜色工具类 */
    .bg-knitBlue { background-color: var(--knit-blue); }
    .bg-knitGreen { background-color: var(--knit-green); }
    .bg-knitPurple { background-color: var(--knit-purple); }
    .bg-knitPink { background-color: var(--knit-pink); }
</style>